<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ropalinda.ropalindamovil">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".App.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.ControllerMain" />
        <activity android:name=".Controllers.ControllerLogin" />
        <activity
            android:name=".Controllers.ControllerInicio"
            android:label="Inicio" />
        <activity
            android:name=".Controllers.ControllerPerfil"
            android:label="Perfil" />
        <activity
            android:name=".Controllers.ControllerHombres"
            android:label="Hombres" />
        <activity
            android:name=".Controllers.ControllerMujeres"
            android:label="Mujeres" />
        <activity
            android:name=".Controllers.ControllerOfertas"
            android:label="Ofertas" />
        <activity android:name=".Controllers.ControllerDetallePrenda"></activity>
    </application>

</manifest>